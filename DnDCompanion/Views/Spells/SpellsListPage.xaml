<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/design"
             xmlns:m="clr-namespace:DnDCompanion.Models"
             xmlns:vm="clr-namespace:DnDCompanion.ViewModels.Spells"
             xmlns:controls="clr-namespace:DnDCompanion.Controls"
             x:Class="DnDCompanion.Views.Spells.SpellsListPage"
             x:DataType="vm:SpellsListViewModel"
             Title="Spells">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="24" Spacing="20">

                <Label Text="Spells"
                       FontSize="24"
                       HorizontalOptions="Center"
                       SemanticProperties.HeadingLevel="Level1" />

                <Button Text="Get Spells"
                        Clicked="OnGetSpellsClicked"
                        HorizontalOptions="Fill" />

                <Button Text="Back"
                        Clicked="OnBackClicked"
                        HorizontalOptions="Fill" />

                <CollectionView x:Name="SpellsCollectionView"
                                ItemsSource="{Binding Spells}"
                                ItemsLayout="VerticalList"
                                ItemSizingStrategy="MeasureAllItems"
                                SelectionMode="Single"
                                SelectionChanged="OnSpellSelected">
                    
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="m:SpellListItem">
                            <Grid Padding="10" RowSpacing="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Name (prominent) -->
                                <Label Grid.Row="0"
                                       Text="{Binding Name}"
                                       FontAttributes="Bold"
                                       FontSize="Medium" />

                                <!-- Level -->
                                <Label Grid.Row="1"
                                       Text="{Binding Level, StringFormat='Level {0}'}"
                                       FontSize="Small"
                                       TextColor="#444" />

                                <!-- Url (wrapped/truncated as needed) -->
                                <Label Grid.Row="2"
                                       Text="{Binding Url}"
                                       FontSize="Small"
                                       LineBreakMode="TailTruncation"
                                       TextColor="#0066CC" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Some redunancy here with two pop ups. Could be controlled in the VM. -->
        <!-- Popup overlay: visible when ViewModel.IsGettingSpells is true -->
        <controls:LoadingPopupView
            IsVisible="{Binding IsGettingSpells}"
            Message="Loading spells..." />

        <!-- Popup overlay: visible when ViewModel.IsGettingSpellDetails is true -->
        <controls:LoadingPopupView
            IsVisible="{Binding IsGettingSpellDetails}"
            Message="Loading spell details..." />
    </Grid>

</ContentPage>