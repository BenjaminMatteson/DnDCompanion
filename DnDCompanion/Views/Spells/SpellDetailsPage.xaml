<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DnDCompanion.ViewModels.Spells"
             x:Class="DnDCompanion.Views.Spells.SpellDetailsPage"
             x:DataType="vm:SpellDetailsViewModel"
             Title="SpellDetailsPage">

    <VerticalStackLayout
        HorizontalOptions="Center">
        <!-- TODO: Different Font & Hardcoded Font size is probably bad -->
        <Label 
            Text="{Binding Name}"
            FontAttributes="Bold"
            FontSize="24"
            TextColor="{StaticResource Primary}"/>

        <Label 
            Text="{Binding SchoolLevelClassesText}"
            FontAttributes="Italic"/>

        <VerticalStackLayout 
            Margin="0, 0, 0, 20">
            <HorizontalStackLayout>
                <Label
                    Text="Casting Time:"
                    FontAttributes="Bold"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />
                <Label
                    Text="{Binding CastingTimeString}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />
            </HorizontalStackLayout>


            <HorizontalStackLayout>
                <Label
                    Text="Range:"
                    FontAttributes="Bold"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />
                <Label
                    Text="{Binding Range}"
                    VerticalOptions="Center" 
                    HorizontalOptions="Center" />
            </HorizontalStackLayout>


            <HorizontalStackLayout>
                <Label
                    Text="Components:"
                    FontAttributes="Bold"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />
                <Label
                    Text="{Binding ComponentsString}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label
                    Text="Duration:"
                    FontAttributes="Bold"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />
                <Label
                    Text="{Binding DurationString}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center" />
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <Label
            Text="{Binding Description}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Margin="0, 0, 0, 20"/>

        <HorizontalStackLayout>
            <Label
                Text="Using a Higher-Level Spell Slot."
                FontAttributes="Bold"
                VerticalOptions="Center"
                HorizontalOptions="Center" 
                IsVisible="{Binding HasHigherLevel}"/>
            <Label
                Text="{Binding HigherLevelString}"
                VerticalOptions="Center"
                HorizontalOptions="Center" 
                IsVisible="{Binding HasHigherLevel}"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>