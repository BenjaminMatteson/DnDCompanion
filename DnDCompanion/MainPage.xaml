<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DnDCompanion.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="d_and_d_logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="super cool dragon breathing fire into the letters of D ampersand D" />

            <Label
                Text="This is a simple DnD Companion App to help you access information for the game. More features coming soon!"
                Margin="0,20,0,0" />

            <Button
                Text="Go to Spells"
                Clicked="OnGoToSpellsClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
